<!--pages/addEvent/addEvent.wxml-->
<view class="container">
  <form>
    <view class="cu-form-group">
      <!-- <view class="title">输入框</view> -->
      <input class="titleInput" placeholder="标题"></input>
	  </view>
    <view class="cu-form-group margin-top">
      <!-- <view class="title">普通选择</view> -->
      <view class="cu-item">
        <text class="cuIcon-settingsfill lg text-gray"></text>
      </view>
      <view class="title">类型</view>
      <picker bindchange="eventTypePickerChange" value="{{eventTypeIndex}}" range="{{eventType}}">
        <view class="picker">
          {{eventTypeIndex?eventType[eventTypeIndex]:'提醒'}}
        </view>
      </picker>
    </view>

    <view class="cu-form-group time-wrap">
      <view class="cu-item">
        <text class="cuIcon-timefill lg text-gray"></text>
      </view>
      <view class="title">日期选择</view>
      <picker mode="date" value="{{chooseDate}}" start="{{setStartDate}}" end="{{setEndDate}}" bindchange="bindDateChange">
        <view class="picker">
          {{chooseDate}}
        </view>
      </picker>
    
    </view>
    <view class="cu-form-group startTime-wrap" wx:if="{{eventTypeIndex == 1}}">
      <!-- <view class="cu-item">
        <text class="cuIcon-timefill lg text-gray"></text>
      </view> -->
      <view class="title">开始时间</view>
      <picker mode="multiSelector" bindchange="bindStartPickerChange" bindcolumnchange="startPickerColumnChange" value="{{multiStartIndex}}" range="{{multiStartArray}}">
        <view class="picker">
          {{startTimeStr}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group endTime-wrap">
     
      <view class="title">截止时间</view>
      <picker mode="multiSelector" bindchange="bindEndPickerChange" bindcolumnchange="bindEndPickerColumnChange" value="{{multiEndIndex}}" range="{{multiEndArray}}">
        <view class="picker">
          {{endTimeStr}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="cu-item">
        <text class="cuIcon-locationfill lg text-gray"></text>
      </view>
      <input class="addressInput" placeholder="添加地点"></input>
	  </view>
    <view class="cu-form-group">
      <!-- <view class="title">输入框</view> -->
      <view class="cu-item">
        <text class="cuIcon-newshotfill lg text-gray"></text>
      </view>
      <input class="addressInput" placeholder="添加备注"></input>
	  </view>
    <view class="cu-form-group">
      
      <view class="cu-item">
        <text class="cuIcon-friendfill lg text-gray"></text>
      </view>
      <view class="title">共享</view>
      <view class="switch-wrap">
        <switch class="blue sm shareSwitch"></switch>
      </view>
      
    </view>


  
  </form>
</view>
